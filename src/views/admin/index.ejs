          <div
            class="tab-pane fade"
            id="manage-users-tab"
            role="tabpanel"
            aria-labelledby="manage-users-nav"
          >
            <form
              id="userForm"
              action="/users/update"
              method="post"
              onsubmit="submitForm()"
            >
              <table class="table table-striped-columns">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Fullname</th>
                    <th scope="col">Username</th>
                    <th scope="col">Email</th>
                    <th scope="col">Delete</th>
                  </tr>
                </thead>
                <tbody>
                  <% users.forEach((user, index) => { %>
                  <tr style="text-decoration: none" hasChange="false">
                    <th scope="row"><%= index + 1 %></th>
                    <th>
                      <input
                        type="text"
                        class="userInput"
                        data-property="Fullname"
                        value="<%= user.Fullname %>"
                        oninput="setChange(this)"
                      />
                    </th>
                    <th>
                      <input
                        type="text"
                        class="userInput"
                        data-property="Username"
                        value="<%= user.Username %>"
                        oninput="setChange(this)"
                      />
                    </th>
                    <th>
                      <input
                        type="text"
                        class="userInput"
                        data-property="Email"
                        value="<%= user.Email %>"
                        oninput="setChange(this)"
                      />
                    </th>
                    <th>
                      <a
                        href="/user/delete/<%= user.id %>"
                        class="fa fa-trash"
                      ></a>
                    </th>
                  </tr>
                  <% }); %>
                </tbody>
              </table>
              <button>Save</button>
            </form>
            <script src="/js/admin/manage-users.js"></script>
          </div>
          <div
            class="tab-pane fade"
            id="add-product-tab"
            role="tabpanel"
            aria-labelledby="add-product-nav"
          >
            <form
              action="/product/create"
              method="POST"
              enctype="multipart/form-data"
            >
              <div class="form-row">
                <div class="form-group col-md-12">
                  <label for="product-name">Product name</label>
                  <input
                    type="text"
                    class="form-control"
                    id="product-name"
                    placeholder="Enter product's name"
                    name="Name"
                  />
                </div>
              </div>
              <div class="form-group">
                <label for="short-description">Short description</label>
                <input
                  type="text"
                  class="form-control"
                  id="short-description"
                  placeholder="My product"
                  name="Short_Description"
                />
              </div>
              <div class="form-group">
                <label for="full-description">Full description</label>
                <input
                  type="text"
                  class="form-control"
                  id="full-description"
                  placeholder="My product"
                  name="Full_Description"
                />
              </div>
              <div
                class="form-row"
                style="display: flex; justify-content: space-between"
              >
                <div class="form-group col-md-4">
                  <label for="product-quantity">Quantity</label>
                  <input
                    type="number"
                    min="0"
                    class="form-control"
                    id="product-quantity"
                    name="Quantity"
                  />
                </div>
                <div class="form-group col-md-3">
                  <label for="product-type">Category</label>
                  <select
                    id="product-type"
                    class="form-control border-0"
                    name="Category_id"
                  >
                    <% for (let [index, category] of categories.entries()) { %>
                      <% if (index == 0) { %>
                          <option selected value="<%= category.id %>"><%= category.Name %></option>
                      <% } else { %>
                          <option value="<%= category.id %>"><%= category.Name %></option>
                      <% } %>
                    <% } %>
                  </select>
                </div>
                <div class="form-group col-md-4">
                  <label for="product-price">Price</label>
                  <input
                    type="number"
                    class="form-control"
                    id="product-price"
                    placeholder="Enter price"
                    min="0"
                    name="Price"
                  />
                </div>
              </div>
              <div class="form-row">
                <div class="form-group col-md-12">
                  <label for="imgInp">Product's image</label>
                  <input
                    type="file"
                    id="imgInp"
                    name="Thumbnail"
                    style="padding: 5px 5px; height: fit-content"
                  />
                </div>
              </div>
              <div
                class="form-group col-md-12"
                style="text-align: center; margin-bottom: 10px"
              >
                <center>
                  <img
                    id="imgReview"
                    src="#"
                    alt="your image"
                    style="
                      display: none;
                      width: 100%;
                      max-height: 500px;
                      border: 2px blue;
                      border-style: dashed;
                      padding: 10px;
                    "
                  />
                </center>
              </div>

              <button type="submit" class="btn btn-primary">Add</button>
            </form>

            <script>
              const imgInp = document.getElementById("imgInp");
              const imgReview = document.getElementById("imgReview");

              imgInp.onchange = (evt) => {
                const [file] = imgInp.files;
                if (file) {
                  imgReview.src = URL.createObjectURL(file);
                  imgReview.style.display = "block"; // Thêm dòng này
                } else {
                  imgReview.style.display = "none"; // Ẩn ảnh nếu không có file
                }
              };
            </script>
          </div>
          <div
            class="tab-pane fade"
            id="orders-tab"
            role="tabpanel"
            aria-labelledby="orders-nav"
          >
            <div class="table-responsive">
              <table class="table table-bordered">
                <thead class="thead-dark">
                  <tr>
                    <th>No</th>
                    <th>Product</th>
