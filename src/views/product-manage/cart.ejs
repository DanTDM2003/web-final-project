<%- include('../partials/head.ejs') %>
<%- include('../partials/header.ejs') %>
<%- include('../partials/nav.ejs') %>

<!-- Breadcrumb Start -->
<div class="breadcrumb-wrap">
    <div class="container">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Products</a></li>
            <li class="breadcrumb-item active">Cart</li>
        </ul>
    </div>
</div>
<!-- Breadcrumb End -->
<% let totalPrice = 0; %>

<!-- Cart Start -->
<div class="cart-page">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th>Remove</th>
                            </tr>
                        </thead>
                        <tbody class="align-middle">
                            <% for (let item of cart) { %>
                                <% totalPrice += +item.product.Price * +item.quantity %>
                                <tr>
                                    <td><a href="#"><img src="/img/thumbnails/<%= item.product.Thumbnail %>" alt="Image"></a></td>
                                    <td><a href="#"><%= item.product.product_name %></a></td>
                                    <td><%= item.product.Price %></td>
                                    <td>
                                        <div class="qty">
                                            <button class="btn-minus"><i class="fa fa-minus"></i></button>
                                            <input class="quantity" type="text" value="<%= item.quantity %>">
                                            <button class="btn-plus"><i class="fa fa-plus"></i></button>
                                        </div>
                                    </td>
                                    <td><%= +item.product.Price * +item.quantity %></td>
                                    <td>
                                        <form action="/cart/delete/<%= item.product.product_id %>" method="POST">
                                            <button><i class="fa fa-trash"></i></button>
                                        </form>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="coupon">
                    <input type="text" placeholder="Coupon Code">
                    <button>Apply Code</button>
                </div>
            </div>
            <div class="col-md-6">
                <div class="cart-summary">
                    <div class="cart-content">
                        <h3>Cart Summary</h3>
                        <h4>Grand Total<span><%= totalPrice %></span></h4>
                    </div>
                    <div class="cart-btn">
                        <button style="display: inline-block;" id="update-btn">Update Cart</button>
                        <a href="/checkout"><button style="display: inline-block;" type="submit">Checkout</button></a>
                    </div>
                    <span id="error" class="w-50 text-danger" style="font-size: 13px;"></span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Cart End -->

<script>
    $(document).ready(function () {
        function updateCart(quantities) {
            $.ajax({
                url: '/cart/update',
                data: { quantities: quantities },
                type: 'POST',
                dataType: 'json',
                success: function (response) {
                    location.reload();
                },
                error: function (error) {
                    location.replace('/login');
                }
            });
        }

        $('#update-btn').click(function() {
            const inputValues = $('.quantity').map(function() {
                return $(this).val();
            }).get();
              
            updateCart(inputValues);
        });  
    });
</script>

